@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    body {
        background: url('/images/privacy-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .privacy-container {
        max-width: 800px;
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        margin: 50px auto;
        text-align: center;
    }

    h1 {
        font-size: 32px;
        font-weight: bold;
        color: #333;
    }

    p {
        font-size: 18px;
        color: #555;
        line-height: 1.6;
    }

    .privacy-section {
        margin-top: 20px;
    }

        .privacy-section h4 {
            color: #222;
            font-size: 22px;
            margin-bottom: 10px;
        }

        .privacy-section p {
            font-size: 16px;
            color: #666;
        }
</style>

<div class="privacy-container">
    <h1>@ViewData["Title"]</h1>
    <p>We respect your privacy and are committed to protecting your personal data.</p>

    <div class="privacy-section">
        <h4>🔍 Information We Collect</h4>
        <p>We collect basic user information such as email and browsing activity to enhance your experience.</p>
    </div>

    <div class="privacy-section">
        <h4>🛡️ How We Protect Your Data</h4>
        <p>Your data is stored securely and protected with advanced encryption methods.</p>
    </div>

    <div class="privacy-section">
        <h4>📩 Contact Us</h4>
        <p>If you have any concerns about your data, please <a href="/Contact" class="text-primary">contact us</a>.</p>
    </div>
</div>
